<%= form_with(model: actor, class: "contents") do |form| %>
  <% if actor.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>

      <ul>
        <% actor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='flex flex-col gap-2 my-5'>
    <%= form.label :image, "表紙画像", class: "text-lg font-semibold" %>
    <div class="inline-flex items-center gap-2">
      <% if @actor.image.attached? %>
        <%= image_tag(@actor.image, style: 'width:120px;height:180px;') %>
      <% else %>
        <%= image_tag('/avatar.png', style: 'width:120px;height:180px;') %>
      <% end %>
      <%= form.file_field :image, class: "" %>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :date_of_birth, "生年月日" %>
    <%= form.date_select :date_of_birth, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :bio, "略歴" %>
    <%= form.text_area :bio, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
