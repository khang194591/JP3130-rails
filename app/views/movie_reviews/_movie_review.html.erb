<div id="<%= dom_id movie_review %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= movie_review.user.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Movie:</strong>
    <%= movie_review.movie.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Review:</strong>
    <%= movie_review.review %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this movie review", movie_review, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this movie review', edit_movie_review_path(movie_review), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
