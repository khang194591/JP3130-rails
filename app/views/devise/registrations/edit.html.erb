<div class='flex flex-col min-w-[480px] max-w-[640px] p-10 border-2 border-slate-900 mx-auto rounded-lg my-4 bg-white'>

  <h2 class='text-3xl font-bold text-center mb-6'>ユーザー更新</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-control mb-4">
      <%= f.label :avatar, "アバター", :class => 'label' %>
      <div class='inline-flex items-center gap-4'>
        <% if current_user.avatar.attached? %>
          <%= image_tag(current_user.avatar, style: 'width:48px;height:48px;border-radius:9999px') %>
        <% else %>
          <%= image_tag('/avatar.png', style: 'width:48px;height:48px;border-radius:9999px') %>
        <% end %>      <%= f.file_field :avatar,:class=>"file-input	file-input-bordered" %>
      </div>
    </div>

    <div class="form-control mb-4">
      <%= f.label :email, "メールアドレス", :class => 'label' %>
      <%= f.email_field :email, autocomplete: "email", disabled: true, class:"input input-bordered" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-control mb-4">
      <%= f.label :name, "名前", :class => 'label' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"input input-bordered" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :password, "パスワード", :class => 'label' %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input input-bordered" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :password_confirmation, "パスワードを認証する", :class => 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input input-bordered" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :current_password, "現在のパスワード", :class => 'label' %>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true, class:"input input-bordered" %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.submit "更新", :class => 'btn w-full text-lg' %>
  <% end %>
  <span class='my-2'></span>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn w-full btn-error" %>
</div>