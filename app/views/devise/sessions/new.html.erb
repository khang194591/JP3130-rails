<div class='flex flex-col min-w-[480px] max-w-[640px] p-10 border-2 border-slate-900 mx-auto rounded-lg my-4 bg-white'>

  <h2 class='text-3xl font-bold text-center mb-6'>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-control mb-4 ">
      <%= f.label :email, "メールアドレス", :class => 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :password, "パスワード", :class => 'label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-control mb-4">
        <label class="label cursor-pointer w-fit">
          <%= f.check_box :remember_me, :class => "toggle mr-2" %>
          <%= f.label :remember_me, "ログインを記憶する", class: "label-text" %>
        </label>
      </div>
    <% end %>
    <%= f.submit "ログイン", :class => 'btn w-full' %>
  <% end %>
  <span class='my-4'></span>
  <%= render "devise/shared/links" %>
</div>
